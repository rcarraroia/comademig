{
  "name": "comademig-payments-api",
  "version": "1.0.0",
  "description": "API Node.js para sistema de pagamentos integrado com Asaas v3",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node test-backend.js",
    "test:jest": "jest",
    "test:watch": "nodemon test-backend.js",
    "deploy": "node deploy.js",
    "keys": "node generate-keys.js",
    "keys:save": "node generate-keys.js --save",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "logs": "tail -f logs/api.log",
    "health": "curl http://localhost:3000/health",
    "setup": "cp .env.example .env && npm run keys",
    "validate": "npm run deploy && npm run test",
    "validate:vercel": "node scripts/validate-vercel.js",
    "build": "echo 'Build completed for Vercel'",
    "vercel-build": "npm run validate:vercel && npm run test",
    "deploy:vercel": "vercel --prod",
    "logs:vercel": "vercel logs",
    "prod": "NODE_ENV=production npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "@supabase/supabase-js": "^2.38.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-node": "^4.1.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}